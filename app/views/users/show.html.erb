<h1><%= @user.name %></h1>

<% if !@user.posts.empty? %>
<% @user.posts.reverse.each do |post| %>
<p>  <%= post.link %> </p>
<p>  <%= post.created_at %> </p>
<p>  <% post.comments.each do |comment| %> </p>
<p>  <%= comment.comment %> </p>
<% end %>
<p><%= link_to "Comment", new_comment_url(post_id: post.id, user_id: @user.id) %></p>
<% end %>
<% end %>


<br><%= link_to "New post", new_post_url(:user_id => @user.id) %>
